<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="index.css" />
    <title>Bookers1</title>
  </head>
  
  <p class='notice'>
  <%= flash[:notice] %>
  </p>
  
  <header>
    <h1>Books</h1>
  </header>
  
  <body>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    
  <h2>New book</h2>
  <% if @book.errors.any? %>
    <div class='error_explanation'>
      <h2>2 errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <%= form_with model: @book do |f| %>
    <div class='field'>
      <div class='field_with_errors'>
        <label for="book_title">Title</label>
      </div>
        <%= f.text_field :title %>
    </div>
    
    <div class='field'>
      <div class='field_with_errors'>
        <label for="book_title">Body</label>
      </div>
        <%= f.text_area :body %>
    </div>
    
    <div class='actions'>
      <%= f.submit 'Create Book' %>
    </div>
    <% end %>

  <% else %>
    <%= form_with model: @book do |f| %>
    <div class='field'>
      <label for="book_title">Title</label><br/>
      <%= f.text_field :title %>
    </div>
  
    <div class='field'>
      <label for="book_title">Body</label><br/>
      <%= f.text_area :body %>
    </div>
    
    <div class='actions'>
      <%= f.submit 'Create Book' %>
    </div>
    <% end %>
  <% end %>
  </body>
</html>