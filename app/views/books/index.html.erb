  </head>

  <header>
    <h1>Books</h1>
  </header>


  <body>
  <h2>New book</h2>
  <div class='field'>
    <%= form_with model: @book do |f| %>
      <label for="book_title">Title</label><br/>
      <%= f.text_field :title %>
  </div>
  
  <div class='field'>
      <label for="book_title">Body</label><br/>
      <%= f.text_area :body %>
  </div>
  
  <div class='actions'>
    <%= f.submit 'Create book' %>
  </div>
      
  <% end %>
  </body>
</html>